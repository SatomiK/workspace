<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
	<!-- ボタンが押されたときの定義 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/yellow"
                android:endColor="@color/orange"
                android:angle="90" /> 
            <stroke 
                android:width="1dp"
                android:color="@color/dimgray"/> 
            <corners
                android:radius="15dp" />
            <padding
               android:left="7dp"
               android:top="7dp"
               android:right="7dp"
               android:bottom="7dp"
               />
            
        </shape>
    </item>
   
	<!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/dimgray"                
                android:endColor="@color/darkgray"                
                android:angle="90" /> 
            <corners
                android:radius="15dp"
               />
            <stroke                
                android:width="1dp"              
                android:color="@color/dimgray" /> 
            <padding
               android:left="7dp"
               android:top="7dp"
               android:right="7dp"
               android:bottom="7dp"
               />
        </shape>
    </item>
    </selector>
